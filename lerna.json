{
	"version": "0.0.9",
	"command": {
		"publish": {
			"npmClient": "npm",
			"ignoreChanges": ["ignored-file", "*.md"],
			"message": "chore(release): publish",
			"registry": "https://npm.pkg.github.com"
		},
		"bootstrap": {
			"ignore": "component-*",
			"npmClientArgs": ["--no-package-lock"]
		}
	},
	"packages": [
		"packages/code-generator",
		"packages/crusher-app",
		"packages/crusher-extension",
		"packages/crusher-server",
		"packages/crusher-shared",
		"packages/dyson",
		"packages/runner-utils",
		"packages/video-processor"
	]
}
