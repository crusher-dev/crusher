{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmitOnError": false,
    "resolveJsonModule": true
  },
  "baseUrl": "../",
  "typeRoots": [",./@types", ",./node_modules/@types"],
  "paths": {
    "@crusher-shared/*": ["crusher-shared/*"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "lib": [
    "es2017"
  ]
}