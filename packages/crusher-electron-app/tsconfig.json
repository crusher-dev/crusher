{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src/",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
  },
  "typeRoots": ["node_modules/@types"],
  "files": [
    "./src/main.ts"
  ],
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts"]
}