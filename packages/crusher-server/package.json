		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"@octokit/auth": "^2.0.0",
		"@octokit/auth-oauth-app": "^3.0.7",
		"@octokit/oauth-app": "^1.1.2",
		"@octokit/rest": "^18.0.14",
