{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"outDir": "dist",
		"paths": {
			"@crusher-shared/*": ["../crusher-shared/*"]
		}
	},
	"files": ["./src/index.ts"],
	"typeRoots": ["node_modules/@types"],
	"include": ["./src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
