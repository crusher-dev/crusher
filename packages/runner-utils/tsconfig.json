{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2021",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"outDir": "dist",
		"paths": {
			"@crusher-shared/*": ["../crusher-shared/*"],
			"@libs/*": ["./src/lib/*"],
			"@utils/*": ["./src/utils/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@dyson/*": ["../dyson/src/*"],
		}
	},
	"files": ["./src/index.ts"],
	"typeRoots": ["node_modules/@types"],
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"],
}
