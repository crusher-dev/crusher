{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false
	},
	"typeRoots": ["node_modules/@types"],
	"files": [
		"src/app.ts"
	],
	"include": ["./src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
